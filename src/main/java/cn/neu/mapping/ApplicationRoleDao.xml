<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.neu.dao.ApplicationRoleDao">

    <insert id="addApplicationRole">
        insert into application_role(application_role_uid,application_role_name,application_role_description,application_role_mainObject,application_role_operationSet,application_uid)
                    values (#{application_role_uid},#{application_role_name},#{application_role_description},#{application_role_mainObject},#{application_role_operationSet},#{application_uid})
    </insert>

    <delete id="deleteApplicationRoleByUid">
        delete from application_role where application_role_uid=#{uid}
    </delete>

    <update id="updateApplicationRoleByUid">
        update application_role set application_role_uid=#{application_role_uid},application_role_name=#{application_role_name},application_role_description=#{application_role_description},
                                application_role_mainObject=#{application_role_mainObject},application_role_operationSet=#{application_role_operationSet},application_uid=#{application_uid}
        where application_role_uid=#{application_role_uid}
    </update>

    <select id="findAllApplicationRolePaged" resultType="cn.neu.domain.ApplicationRole">
        SELECT * FROM application_role limit #{before}, #{after}
    </select>

    <select id="findApplicationRolePaged" resultType="cn.neu.domain.ApplicationRole">
         SELECT * FROM application_role limit #{before}, #{after}
    </select>

</mapper>



